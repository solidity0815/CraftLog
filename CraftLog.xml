<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
  <Frame name="CraftLogFrame" inherits="BasicFrameTemplateWithInset" hidden="true" movable="true" resizable="true" enableMouse="true" clampedToScreen="true" scale="0.6">
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Size x="800" y="600" />
    <!--<ResizeBounds>
      <minResize x="300" y="200"/>
    </ResizeBounds>-->
    <Scripts>
      <OnLoad>
        tinsert(UISpecialFrames, self:GetName());
        self:RegisterForDrag("LeftButton");
      </OnLoad>
      <OnDragStart>
        self:StartMoving();
      </OnDragStart>
      <onDragStop>
        self:StopMovingOrSizing();
      </onDragStop>
    </Scripts>
    <Frames>
      <CheckButton name="cbCreated" inherits="UICheckButtonTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" x="20" y="-60"/>
        </Anchors>
        <Layers>
          <Layer>
            <FontString text="show crafted items" inherits="GameFontNormal">
              <Anchors>
                <Anchor point="LEFT" relativeTo="$parent" x="40" y="0"/>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
        <Scripts>
          <OnShow>
            cbCreated_OnShow(self);
          </OnShow>
          <OnClick>
            cbCreated_OnClick(self);
          </OnClick>
        </Scripts>
      </CheckButton>
